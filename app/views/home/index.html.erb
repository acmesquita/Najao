<br/>
<% if notice.present?%>
<div id="notice" class="alert alert-success alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <strong><%= notice %></strong>
</div>
<% end %>
<h2>Configurações</h2>

<h4>Usuários</h4>

<table class="table">
	<thead>
		<tr>
			<th>#</th>
			<th>Nome</th>
			<th>E-mail</th>
			<th colspan="3">Ações</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		  <tr>
		    <td><%= user.id %></td>
		    <td><%= user.name %></td>
		    <td><%= user.email %></td>
		    <td><%= link_to 'Deletar', home_path(user), method: :delete, data: { confirm: 'Deseja excluir esse usuário?' }, class:"btn btn-danger" %></td>
		  </tr>
		<% end %>
	</tbody>
</table>