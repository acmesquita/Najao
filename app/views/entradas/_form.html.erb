<%= form_for(entrada) do |f| %>
  <% if entrada.errors.any? %>
    <div id="error_explanation">
      <div id="" class=" alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span></button>
          <h4><%= pluralize(entrada.errors.count, "Erros") %></h4>

          <ul>
          <% entrada.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
      </div>
    </div>
  <% end %>

<div class="form-horizontal col-md-8">  
  <div class="form-group">
    <%= f.label :data, class:"col-sm-4 control-label"%>
   <div class="col-sm-8">
        <%= f.date_field :data,:value => Date.today, class:"form-control"%>
    </div>
  </div>

  <div class="form-group">
      <%= f.label 'Valor', class:"col-sm-4 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :valor, class:"form-control" %> 
      </div>
    </div>

  <div class="form-group">
    <%= f.label :descricao, class:"col-sm-4 control-label" %>
    <div class="col-sm-8">
    <%= f.text_area :descricao, class:"form-control" %>
    </div>
  </div>

</div>
<div class="actions">
  <%= f.submit 'Salvar', class:"btn btn-primary" %>
</div>
<br/>
<% end %>